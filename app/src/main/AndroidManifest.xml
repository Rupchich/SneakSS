<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SneakSS"
        tools:targetApi="31">

        <activity android:name=".LoginActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.SneakSS">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".MainActivity"
            android:exported="false"
            android:label="@string/app_name"
            android:theme="@style/Theme.SneakSS" />

        <activity android:name=".AddSneakerActivity"
            android:exported="false"
            android:label="Dodaj tenisicu"
            android:theme="@style/Theme.SneakSS" />

        <activity android:name=".EditSneakerActivity"
            android:exported="false"
            android:label="Uredi tenisicu"
            android:theme="@style/Theme.SneakSS" />

        <activity android:name=".SettingsActivity"
            android:exported="false"
            android:label="Postavke"
            android:theme="@style/Theme.SneakSS" />

        <activity android:name=".FilterActivity"
            android:exported="false"
            android:label="Filter"
            android:theme="@style/Theme.SneakSS" />

        <activity android:name=".SneakerDetailsActivity"
            android:exported="false"
            android:label="Detalji tenisice"
            android:theme="@style/Theme.SneakSS" />

        <activity android:name=".InfoActivity"
            android:exported="false"
            android:label="Info aplikacije"
            android:theme="@style/Theme.SneakSS" />

        <activity android:name=".CompareActivity"
            android:exported="false"
            android:label="Info aplikacije"
            android:theme="@style/Theme.SneakSS" />


    </application>

</manifest>
